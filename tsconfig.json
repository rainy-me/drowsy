{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "allowJs": false,
    "removeComments": true
  },
  "include": [
    "src",
    "example",
    "node_modules/@types/puppeteer/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "rules": {
    "no-console": false,
    "interface-name": [
      true,
      "never"
    ]
  }
}